{
    "projects": [
      {
        "name": "client",
        "src": "client/",
        "buildCommand": "npm run build",
        "outputDirectory": "client/dist"
      },
      {
        "name": "server",
        "src": "server/",
        "buildCommand": "npm install",
        "outputDirectory": "server",
        "functions": {
          "api/**/*.js": {
            "memory": 128,
            "maxDuration": 10
          }
        }
      }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server/api/$1" },
      { "source": "/(.*)", "destination": "/client/$1" }
    ]
  }
  